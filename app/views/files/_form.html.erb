<%= form_with url: files_path, method: :post, multipart: true do |form| %>
  <div class="row mb-3">
    <div class="col-sm-5">
      <div class="mb-1">
        <%= form.label :file, "Choose a file to upload" %>
        <%= form.file_field :file, class: "form-control" %>
      </div>
      <button type="submit" class="btn btn-primary"><i class="fas fa-upload me-1"></i>Upload</button>
    </div>
  </div>
<% end %>